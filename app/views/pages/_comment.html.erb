<article class="comment">
    <span class="profile">
        <%= image_tag comment.user.avatar.variant(combine_options:{resize:"#{50}x#{50}^",crop:"#{50}x#{50}+0+0",gravity: :center}).processed ,class:'avatar' if comment.user.avatar.attached? %>
        <span class="username"><%= comment.user.username %></span>
    </span>
        <%= simple_format(comment.content) %>
</article>
