<h1 class="title">投稿リスト</h1>

<% @stories.each do |story| %>
  <h2 class="title"><%= story.title %>
  <%= content_tag :span , '投稿した',class: 'tag is-primary' if story.published? %>
  </h2>
  <p><%= truncate(strip_tags(story.content),length:30) %></p>
  <p>
     最後編輯時間: <%= time_ago_in_words(story.updated_at) %>
     <%= link_to "修正",edit_story_path(story),class: 'button is-text is-small'%>
     <%= link_to "削除",story,method:'delete',class:'button is-small is-danger',data: { confirm: '削除しましょうか？'}%>   
  </p>
   <hr>
<% end %>